<div class="user list">
  <h2>Users</h2>
  
  <table class="listing" summary="user list">
    <tr class="header">
      <th>Name</th>
      <th>User Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.user_name %></td>
	  <td><%= user.email %></td>
      <td class="actions">
        <%= link_to("Show", user_path(user.id), :class => 'action show') %>
        <%= link_to("Edit", edit_user_path(user.id), :class => 'action edit') %>
        <%= link_to("Delete", user_path(user.id),:confirm=>"Are you sure you want to delete #{user.name}?", :method=>:delete, :class => 'action delete') %>

      </td>
    </tr>
    <% end %>

  </table>
   <%= link_to("Add New User", new_user_path, :class => 'action new') %>
</div>
